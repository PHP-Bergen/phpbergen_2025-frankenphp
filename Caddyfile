{
    auto_https {$AUTO_HTTPS:disable_redirects}
	frankenphp {
		worker /app/public/index.php
	}
}

# Direct HTTPS access
https://localhost {
    log
    encode zstd br gzip
    root public/

    php_server {
        try_files {path} index.php
    }
}

# HTTP access for Traefik
http://localhost {
    log
    encode zstd br gzip
    root public/

    php_server {
        try_files {path} index.php
    }
}
